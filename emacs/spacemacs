;; -*- mode: emacs-lisp -*-

(setq-default dotspacemacs-configuration-layer-path '("~/dotfiles/emacs/layers/"))
(setq-default dotspacemacs-configuration-layers '(Wolfy87))
(setq-default dotspacemacs-fullscreen-at-startup t)

(defun dotspacemacs/init ()
  (defvar evil-want-C-u-scroll t)
  (set-default-font "Input Mono 12"))

(defun dotspacemacs/config ()
  (load-theme 'solarized-dark t))
