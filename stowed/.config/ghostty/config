# https://ghostty.org/docs/config/reference

theme = carbonfox
font-family = Fira Code Nerd Font
font-size = 10

mouse-hide-while-typing = true

window-padding-color = extend
window-decoration = false

keybind = f11=toggle_window_decorations
keybind = ctrl+shift+h=write_screen_file:paste
keybind = ctrl+page_up=scroll_page_up
keybind = ctrl+page_down=scroll_page_down

# Toggle fullscreen by default, we want to use this in Neovim though.
keybind = ctrl+enter=unbind
