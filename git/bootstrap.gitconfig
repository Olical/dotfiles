[core]
    editor = vim
    excludesfile = ~/dotfiles/git/excludes.txt
[color]
    ui = true
[push]
    default = simple
[diff]
    tool = vimdiff
[merge]
    tool = splice
[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
