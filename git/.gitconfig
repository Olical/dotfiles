[user]
    name = Oliver Caldwell
    email = olliec87@gmail.com
[core]
    editor = nvim
    excludesfile = ~/.gitexcludes
[color]
    ui = true
[push]
    default = simple
[include]
    path = ~/.gitconfig_local
[mergetool "nvim"]
    path = /bin/nvim
    keepBackup = false
[alias]
    s = status -sb
    b = branch
    c = commit -v
    a = add
    co = checkout
    l = pull
    p = push
    f = fetch
    mt = mergetool
    m = merge
    r = remote
    re = rebase
    lg = log --stat
    d = diff
